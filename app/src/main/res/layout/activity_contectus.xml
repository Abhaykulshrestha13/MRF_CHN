<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/contactus"
                            android:padding="5dp"
                            android:text="ADDRESS:"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="40dp"
                            android:letterSpacing=".1"
                            style="@style/contactus"
                            android:gravity="center_vertical"
                            android:text="RAM NAGAR,"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="40dp"
                            android:letterSpacing=".1"
                            style="@style/contactus"
                            android:gravity="center_vertical"
                            android:text="MADIPAKKAM,"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="40dp"
                            android:letterSpacing=".1"
                            style="@style/contactus"
                            android:gravity="center_vertical"
                            android:text="CHENNAI, TAMILNADU - 600042"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            style="@style/contactus"
                            android:padding="5dp"
                            android:text="Also,"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:src="@drawable/ic_baseline_alternate_email_24" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:src="@drawable/logo_wa" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txteml"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:onClick="email"
                        android:letterSpacing=".1"
                        android:paddingLeft="5dp"
                        android:text="test@outlook.com"
                        android:textSize="25sp"
                        style="@style/contactus" />

                    <TextView
                        android:id="@+id/txtwa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/contactus"
                        android:letterSpacing=".1"
                        android:text="+918072103321"
                        android:textSize="25sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

