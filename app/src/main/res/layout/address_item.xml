<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center|left"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/white"
    android:elevation="20dp">
    <ImageView
        android:src="@drawable/address_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_baseline_home_24">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_addressname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="20dp"
            style="@style/Font"
            android:text="Office Addres"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_addressful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="15dp"
            android:text="216, Apple squre, motavarachha, surat-305101"
            android:textColor="@color/colorblack"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/txt_change"
        style="@style/Font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Update"
        android:textColor="#FF5100" />

    <RadioButton
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/offer_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/colorwhite"
        android:shadowColor="@color/colorblack" />

</LinearLayout>
</androidx.cardview.widget.CardView>

